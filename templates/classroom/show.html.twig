{% extends 'base.html.twig' %}

{% block title %}Classroom{% endblock %}

{% block stylesheets %}
    {{ parent() }}
 <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <h1>Classroom</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classroom.ref }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classroom.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ classroom.createdAt ? classroom.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

 <a href="{{ path('app_classroom_index', {'ref': classroom.ref}) }}" class="btn btn-danger">back to list</a>
 <a href="{{ path('app_classroom_edit', {'ref': classroom.ref}) }}" class="btn btn-danger">edit</a>
    

    {{ include('classroom/_delete_form.html.twig') }}
{% endblock %}
