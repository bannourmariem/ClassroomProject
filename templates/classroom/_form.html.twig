

<!DOCTYPE html>
<html>
<head>
    <title>Your Page Title</title>
    <style>
       .custom-form {
    margin: 20px;
    padding: 20px;
    background-color: #f7f7f7;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.form-group {
    margin-bottom: 20px;
}

.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
}

.btn {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btn:hover {
    background-color: #0056b3;
} 
    </style>
</head>
<body>
  {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
    <div class="form-group">
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Classroom Name'}}) }}
    </div> 
    
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</body>
</html>